<Window x:Class="PresentationWPF.EditMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationWPF"
        mc:Ignorable="d"
        Title="EditMessage" Height="150" Width="500">
    <Grid>
        <TextBox MaxLength="120" Text="{Binding Edit}" HorizontalAlignment="Left" Height="32" Margin="63,0,0,83" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="399" Opacity="0.7" FontFamily="Comic Sans MS" FontSize="18"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="169,89,0,0" RenderTransformOrigin="1.373,2.186" Click="Button_Click"/>

    </Grid>
</Window>